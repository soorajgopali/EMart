@model ParentViewModel


<div class="row pb-3" style="margin-top:100px">
    @foreach (var team in Model.TeamList)
    {
        <div class="col-12 text-center mb-4" id="teamSection-@team.Id" style="display: inline-block; text-align: center; background-color: #EAEAEA;">
            <div style="display: flex; flex-direction: column; align-items: center;">
                <img src="@team.ImageUrl" alt="@team.Name" style="max-width: 100px; max-height: 100px; margin-bottom: 5px;">
                <h2 style="margin-top: 0;">@team.Name</h2>
            </div>
        </div>

    }

    <div class="row pb-3" style="margin-top:100px">
        @if (Model.productList.Any())
        {
            @foreach (var product in Model.productList)
            {
                <a asp-controller="Home" asp-action="Details" asp-route-productId="@product.Id" class="col-lg-3 col-sm-6 text-decoration-none">
                    <div class="row p-2">
                        <div class="col-12 p-1">
                            <div class="card border-0 p-3 shadow border-top border-5 rounded">
                                <img src="@product.ImageUrl" class="card-img-top rounded" />
                                <div class="card-body pb-0">
                                    <div class="pl-1">
                                        <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Season @product.PlayerName @product.Title </p>
                                        <p class="card-title text-warning text-center"><b>@product.ProductCode</b></p>
                                    </div>
                                    <div class="pl-1">
                                        <p class="text-dark text-opacity-75 text-center mb-0">
                                            <span class="">
                                                @product.Price.ToString("c")
                                            </span>
                                        </p>
                                    </div>
                                    <div class="pl-1">
                                        <p class="text-dark text-opacity-75 text-center">
                                            <span>

                                            </span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p>No products available for this team.</p>
            </div>
        }
    </div>



