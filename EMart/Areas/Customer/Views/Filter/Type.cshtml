@model List<ProductViewModel>


<div class="text-center" style="padding-top:20px;">
    @if (!string.IsNullOrEmpty(ViewBag.EditionName))
    {
        <h1>@ViewBag.EditionName</h1>
    }
    else if (!string.IsNullOrEmpty(ViewBag.SpecificName))
    {
        <h1>@ViewBag.SpecificName</h1>
    }
    else if (!string.IsNullOrEmpty(ViewBag.BrandName))
    {
        <h1>@ViewBag.BrandName</h1>
    }
    else
    {
        <h1>No data available</h1>
    }
</div>


    <div class="row pb-3" style="margin-top:50px">
        @if (Model.Any())
        {
            @foreach (var product in Model)
            {
                <a asp-controller="Home" asp-action="Details" asp-route-productId="@product.Id" class="col-lg-3 col-sm-6 text-decoration-none">
                    <div class="row p-2">
                        <div class="col-12 p-1">
                            <div class="card border-0 p-3 shadow border-top border-5 rounded">
                                <img src="@product.ImageUrl" class="card-img-top rounded" />
                                <div class="card-body pb-0">
                                    <div class="pl-1">
                                        <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Season @product.PlayerName @product.Title </p>
                                        <p class="card-title text-warning text-center"><b>@product.ProductCode</b></p>
                                    </div>
                                    <div class="pl-1">
                                        <p class="text-dark text-opacity-75 text-center mb-0">
                                            <span class="">
                                                @product.Price.ToString("c")
                                            </span>
                                        </p>
                                    </div>
                                    <div class="pl-1">
                                        <p class="text-dark text-opacity-75 text-center">
                                            <span>

                                            </span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p>No products available for this.</p>
            </div>
        }
    </div>



