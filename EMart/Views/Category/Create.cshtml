@model EMart.Models.Models.ViewModels.CategoryViewModel

<div class="container mt-5">
    <h2>Create Category</h2>
    <form method="post" class="mt-4" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.Name"></label>
            <input asp-for="@Model.Name" class="form-control" required>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.DisplayOrder"></label>
            <input asp-for="@Model.DisplayOrder" class="form-control" required min="1" max="100" value="@ViewBag.MaxDisplayOrder" readonly>
            <span asp-validation-for="@Model.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Image"></label>
            <input type="file" asp-for="@Model.Image" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="Category" asp-action="index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

