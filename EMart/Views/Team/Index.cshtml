@model List<TeamViewModel>

<h2>Teams</h2>

<a asp-controller="Team" asp-action="Create" class="btn btn-primary">Create Team</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Image</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
                <td>@team.Id</td>
                <td>@team.Name</td>
                <td><img src="@team.ImageUrl" alt="Team Image" width="100" height="100" /></td>
                <td>@team.TeamTypeName>
            </tr>
        }
    </tbody>
</table>